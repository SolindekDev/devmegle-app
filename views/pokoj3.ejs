    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
      body { 
        margin: 0; 
        padding-bottom: 3rem;
        /* font-family: 'Ubuntu', sans-serif; */
        font-family: 'Fira Sans', sans-serif !important; 
        color: white;
        background-color: #222831;
      }

      #form { 
        background-color: #393e46;
        position: fixed; 
        bottom: 0; 
        left: 0; 
        right: 0; 
        display: flex; 
        height: 3rem; 
        box-sizing: 
        border-box; 
        backdrop-filter: 
        blur(10px); 
        height: 50px;
        padding-bottom: 2px;
        padding-top: 2px;
        margin-top: 10px;
      }
      #input { 
        border: none; 
        padding: 5px 1rem; 
        flex-grow: 1; 
        border-radius: 12px; 
        margin: 0.25rem; 
        resize: none;
        overflow: hidden;
      }
      #input:focus { 
        outline: none; 
      }

      #messages { 
        list-style-type: none; 
        margin-top: 10px; 
        padding: 0; 
      }
      .messageBox { 
        padding: 0.5rem 1rem; 
        margin-bottom: 10px;
        border-radius: 13px;
        margin-left: 50px;
        width: 100%;
        max-width: 700px;
        height: 100%;
        margin-right: 30px;
        word-wrap: break-word;
        background-color: #5500d3;
      }
      .code {
        background: #222831;
        padding: 5px 10px;
        border-radius: 6px;
        width: 100%;
        max-width: 500px;
        min-width: 500px;
        word-wrap: break-word;
        font-family: "Liberation Mono", "Courier New", monospace;
        color: red;
      }
      minidate {
        color: rgb(182, 182, 182);
        font-size: 13px;
        font-weight: 300 !important;
      }
      user {
        color: rgb(248, 248, 248);
      }
      .avatarMessage {
        border-radius: 50%;
      }
    </style>
    <style>
        ::-moz-selection { background: rgb(0, 0, 0); color:rgb(255, 255, 255); }
        ::selection { background: rgb(0, 0, 0); color:rgb(255, 255, 255);}

        ::-webkit-scrollbar {
            width: 20px;
          }
        
        ::-webkit-scrollbar-track {
          background-color:rgb(0, 0, 0);
        }

        ::-webkit-scrollbar-thumb {
          background: rgb(255, 255, 255); 
          border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
          background: #ffffff; 
        }
        .errort {
          top: 0;
          text-align: center;
          margin-top: 30px;
          background-color: red;
          border-radius: 12px;
          margin-left: 800px;
          margin-right: 800px;
          padding: 10px 0px;
        }
        .btnn {
          color: white !important;
          background-color: rgb(98, 0, 255);
          border: none;
          padding: 0px 20px;
          margin-top: 2px;
          margin-bottom: 2px;
          border-radius: 12px;
          transition: 0.2s all ease-in-out; 
        }
        .btnn:hover {
          background-color: rgb(85, 0, 221);
          -webkit-box-shadow: 0px 0px 43px -10px #5500DD; 
          box-shadow: 0px 0px 43px -10px #5500DD;
        }
        nav {
          top: 0;
          padding: 20px 50px;
          text-align: center;
          background: rgb(132,55,255);
          background: radial-gradient(circle, rgba(132,55,255,1) 0%, rgba(85,0,211,1) 100%);
        }
        .pokojButton {
          color: white;
          text-decoration: none !important;
          transition: 0.3s all ease-in-out;
          margin-right: 30px;
          cursor: pointer;
        } 
        .pokojButton:hover {
          color: rgb(192, 192, 192);
          transition: 0.3s all ease-in-out;
        }
        .activePokojButton {
          color: rgb(197, 197, 197);
          text-decoration: none !important;
          transition: 0.3s all ease-in-out;
        }
        a {
          color: white;
          text-decoration: none !important;
        }
        a:hover {
          color: rgb(182, 182, 182);
        }
    </style>
  
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body>
    <nav class="w3-animate-top">
        <span onclick="Pokoj1()" class="pokojButton">
          Pokój 1
        </span>
        <span onclick="Pokoj2()" class="pokojButton">
