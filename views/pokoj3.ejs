    <script src="/socket.io/socket.io.js"></script>
    <script>
      function Pokoj1() {
        window.location.replace('<%= linkDomain %>chat/pokoj-1?username=<%= user %>&avatarURL=<%= avatar %>')
      }
      function Pokoj2() {
        window.location.replace('<%= linkDomain %>chat/pokoj-2?username=<%= user %>&avatarURL=<%= avatar %>')
      }
      function Pokoj3() {
        window.location.replace('<%= linkDomain %>chat/pokoj-3?username=<%= user %>&avatarURL=<%= avatar %>')
      }
      function Pokoj4() {
        window.location.replace('<%= linkDomain %>chat/pokoj-4?username=<%= user %>&avatarURL=<%= avatar %>')
      }
  
    </script>
